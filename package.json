{
  "name": "wordpress-health-check",
  "version": "2.0.0",
  "description": "Simple WordPress site health check tool for non-technical users",
  "scripts": {
    "test": "playwright test tests/essential-tests.spec.js",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "health-check": "./run-simple-tests.sh",
    "install:browsers": "playwright install --with-deps"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0"
  },
  "devDependencies": {},
  "keywords": [
    "wordpress",
    "health-check",
    "testing",
    "playwright",
    "user-friendly",
    "non-technical"
  ],
  "author": "WordPress Health Check Team",
  "license": "MIT"
}
